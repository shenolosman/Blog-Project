@model AppUserLoginModel
@{
    ViewData["Title"] = "SignIn";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Sign in</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/templates/blog-template/startbootstrap-blog-home-gh-pages/assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogProject.Web.styles.css" asp-append-version="true" />
    <link href="/templates/blog-template/startbootstrap-blog-home-gh-pages/css/styles.css" rel="stylesheet" />

</head>
<body>
    <form asp-action="SignIn" method="POST" class="w-50 mt-5 p-3 mx-auto shadow">
        <div class="mb-3 row">
            <label>Username: </label>
            <input asp-for="Username" class="form-control">
        </div>
        <div class="mb-3 row">
            <label>Password :</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>

        <div class="mb-3 row">
            <button type="submit" class="btn btn-dark">Sign in</button>
        </div>

    </form>

</body>
</html>