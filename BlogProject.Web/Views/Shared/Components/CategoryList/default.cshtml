@model List<CategoryWithBlogsCountModel>
<div class="card mb-4">
    <div class="card-header">Categories</div>
    <div class="list-group">
        @if (Model==null)
        {
            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">No Category
            </a>
        }
        else
        {
            @foreach (var item in Model)
            {
                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">@item.CategoryName
                    <span class="badge bg-primary rounded-pill">@item.BlogsCount</span>
                </a>

            }
        }
       


    </div>
</div>