@model List<BlogListModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" asp-controller="Blog" class="btn btn-outline-primary my-2">New Blog</a>
<table class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category issue</th>
            <th>Issue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>
                    <a asp-action="AssignCategory" asp-route-id="@blog.Id" class="btn btn-outline-primary">Assign Category</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>